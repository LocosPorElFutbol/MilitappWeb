    <script type="text/javascript">

        function callDatosResultadoElectoral(obj) {            
            var strMethodUrl = '@Url.Action("armarDatosGraficoBarras", "ResultadoElectoral")'
            $.getJSON(strMethodUrl, function (json) {                
                graficoBarras(json);
            });            
        }

        
        function callDatosIngresoDiputados(obj) {
            var strMethodUrl = '@Url.Action("armarDatosIngresoDiputados", "ResultadoElectoral")'
            $.getJSON(strMethodUrl, function (json) {
                graficoIngresoDiputados(json);
            });
        }

        function CallDatosIngresoLesgiladores(obj) {
            var strMethodUrl = '@Url.Action("armarDatosIngresoLegisladores", "ResultadoElectoral")'
            $.getJSON(strMethodUrl, function (json) {
                graficoIngresoLesgiladores(json);
            });
        }
               
        function CargaControles() {
            var obj;
            callDatosResultadoElectoral(obj);
            callDatosIngresoDiputados(obj);
            CallDatosIngresoLesgiladores(obj);                             
        }

        function graficoBarras(obj) {
            var ctxB = document.getElementById("ResultadoElectoral").getContext('2d');
            var myBarChart = new Chart(ctxB, {
                type: 'bar',
                data: {
                    labels: ["DIP_VM", "LEG_VM", "DIP_UP", "LEG_UP", "DIP_Ev", "LEG_Ev", "DIP_1P", "LEG_1P"],
                    datasets: [{
                        label: '% de Votos',
                        data: obj,                        
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                scaleStartValue : 0,
                optionss: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }
        

        function graficoIngresoLesgiladores(obj) {
            var ctxB = document.getElementById("IngresoLegisladores").getContext('2d');
            var myBarChart = new Chart(ctxB, {
                type: 'bar',
                data: {
                    labels: ["LEG_VM", "LEG_UP", "LEG_Ev", "LEG_1P"],
                    datasets: [{
                        label: 'Ingreso de LEGISLADORES',
                        data: obj,                                                
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 99, 132, 0.2)',
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(255, 99, 132, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                scaleStartValue : 0,
                optionss: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }
        
        
        function graficoIngresoDiputados(obj) {
            var ctxBB = document.getElementById("IngresoDiputados").getContext('2d');
            var myBarChart = new Chart(ctxBB, {
                type: 'bar',
                data: {
                    labels: ["DIP_VM", "DIP_UP", "DIP_Ev", "DIP_1P"],
                    datasets: [{
                        label: 'Ingreso de DIPUTADOS',
                        data: obj,                                                
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(54, 162, 235, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                scaleStartValue: 0,
                options: {
                    scales: {
                        includeZero: true,
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
        }


        //Funcion para el filtrado
        $(document).ready(function () {

            (function ($) {

                $('#filter').keyup(function () {

                    var rex = new RegExp($(this).val(), 'i');
                    $('.searchable tr').hide();
                    $('.searchable tr').filter(function () {
                        return rex.test($(this).text());
                    }).show();

                })

            }(jQuery));

        })

    </script>
